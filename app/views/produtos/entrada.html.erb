<div class="conteudo">

	<%= form_tag entrada_produto_path do %>

	<div style="width: 60%; margin-top: 20px; margin-left: 50px;">

		<div class="form-group">
			<%= label_tag :nome %>
			<%= text_field_tag :nome, @produto.nome, class: "form-control", :disabled=>true %>
		</div>

		<div class="form-group">
			<%= label_tag :quantidade %>
			<%= number_field_tag :quantidade, @produto.quantidade, step: 1, class: "form-control", :disabled=>true %>
		</div>

		<div>
			<%= label_tag :entrada %>
			<%= number_field_tag :entrada, step: 1, class: "form-control" %>
		</div>

		<div>
			<%= submit_tag :Salvar, class: "btn btn-primary" %>
		</div>

	</div>

<% end %>


</div>