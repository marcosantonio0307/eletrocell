<div class="conteudo">

	<% if flash[:notice] %>
		<div class="alert alert-info" role="alert">
	  		<%= flash[:notice] %>
		</div>
	<% end %>

	<div class="rotulo">
		<span>Minhas Despesas</span>
	</div>

	<%= form_tag filtra_despesas_path, method: :get, class: "navbar-form navbar-right" do %>
	<div class="form-group">
		<%= label_tag :data_inicial %>
		<%= date_field_tag :data_inicial, @data_inicial, class: 'form-controll' %>
		<%= label_tag :data_final %>
		<%= date_field_tag :data_final, @data_final, class: 'form-controll' %>
		<%= link_to "Voltar", relatorios_r_despesas_path, class: "btn btn-default" %>
		<%= button_to "Filtrar", nil, class: 'btn btn-primary' %>

	</div>
	<% end %>

	<%= render 'despesas' %>
</div>